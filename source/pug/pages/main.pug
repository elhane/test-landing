extends ../base/layout

block variables
  - const title = "Бридж - инвестиционный фонд"
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentPage = "main" //- для остальных страниц пишем пустую строку или индекс активного headerLinks
  -
    const socialLinks = [
      {
        name: "YouTube",
        href: "#",
        icon: "youtube",
        width: 25,
        height: 18
      },
      {
        name: "Telegram",
        href: "#",
        icon: "tg",
        width: 26,
        height: 21
      },
      {
        name: "Instagram",
        href: "#",
        icon: "instagram",
        width: 23,
        height: 23
      },
      {
        name: "Vkontakte",
        href: "#",
        icon: "vk",
        width: 25,
        height: 15
      },
    ]

block main
  main
    .container
      //- Все данные должны выноситься в pug/data, привязываясь к бэм, а не к странице
      //- т.е у вас будет pug/data/features.pug || intro.pug, а не main.pug || catalog.pug
      //p(style="margin-top: 40px;") Пример импорта из `pug/data`
      //h3!= heading.title
      //p= heading.description
      //p!= heading.description
      //p !{heading.description}
      //- != и !{} позволяют html отрабатывать в pug, используйте их по умолчанию
      //- варианты когда в тексте требуется отобразить <b>тест</b> тегами встречается редко
    section.intro

      .container
        +video-controls
        .intro__inner
          h1.intro__title Пассивный доход до&nbsp;#[strong 20%] годовых на инвестициях в недвижимость.
          +socials(socialLinks).socials--white.socials--col
        +video-preview("Новое видео уже на YouTube", "#", "new-video", "новое видео на YouTube")
block modals
